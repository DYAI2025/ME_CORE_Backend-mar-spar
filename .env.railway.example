# Railway Environment Variables Template
# Copy this to Railway's environment variables section

# Database Configuration
# Railway will automatically provide this when you add MongoDB service
DATABASE_URL=${{MongoDB.DATABASE_URL}}
MONGO_DB_NAME=marker_engine

# Redis Configuration (optional)
# Add Redis service in Railway to get this
REDIS_URL=${{Redis.REDIS_URL}}

# Environment
ENVIRONMENT=production
PYTHON_ENV=production

# API Keys (optional - add if you want LLM features)
# MOONSHOT_API_KEY=your_moonshot_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here

# Monitoring
ENABLE_METRICS=true

# Performance
MAX_TEXT_LENGTH=100000
REQUEST_TIMEOUT=300

# Cache Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TTL=3600

# Spark NLP (disable for basic deployment)
SPARK_NLP_ENABLED=false